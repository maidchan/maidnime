{
    "name": "maidnime-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "npm run dev --workspace=packages/anistream",
        "dev:backend": "cd packages/backend && go run main.go",
        "build": "npm run build --workspace=packages/anistream",
        "build:backend": "cd packages/backend && go build -o bin/server main.go",
        "preview": "npm run preview --workspace=packages/anistream"
    },
    "devDependencies": {
        "typescript": "^5.0.0"
    }
}